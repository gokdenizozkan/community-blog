<%= form_with url: '/search', method: :get do |form| %>
  <div>
    <%= form.text_field :query, class: 'nes-input' %>
  </div>

  <div id="advanced-search-helper">
    <%= link_to "Advanced", nil, remote: true, class: "nes-btn is-warning", data: {
      controller: 'articles',
      action: 'articles#toggleDiv',
      articles_advanced_fields_div_param: "advanced-search-fields",
    } %>
  <div>

  <div id="advanced-search-fields" class="hidden">
    <%= form.text_field :tags, class: 'nes-input' %>
  </div>

  <div>
    <%= form.submit class: 'nes-btn' %>
  </div>
<% end %>