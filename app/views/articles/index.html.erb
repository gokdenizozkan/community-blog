<% if notice.present? %>
  <p class="notice"><%= notice %></p>
<% end %>

<article>
  <header>
    <h1>Articles</h1>
  </header>

  <ul>
    <% Article.all.each do |article| %>
      <li>
        <%= link_to article.title, article %><br>
        <%= article.created_at %><br>
        <%= article.is_published_in_words %>
      </li>
    <% end %>
  </ul>

  <footer>
    <%= link_to "New Article", new_article_path %>
  </footer>
</article>
