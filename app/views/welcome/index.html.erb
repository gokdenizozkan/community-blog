<div class="centered-items">
  <h1 class="centered-text">Welcome</h1>

  <%= link_to "Write the very first article!", new_article_path if @published_articles.empty? %>

  <% @published_articles.each do |article| %>
    <div class="article-card nes-container with-title">
      <div class="title">
        <%= link_to article.user.nickname, user_profile_path(article.user) %><br>
        <%= time_tag article.created_at, 'data-local': 'time-ago' %>
      </div>
      
      <%= link_to article.title, article %>
    </div>
  <% end %>
</div>